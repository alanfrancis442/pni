{
	"name": "pni",
	"version": "1.0.0",
	"description": "CLI tool for creating Nuxt/Vue projects with Three.js and CSS variables setup",
	"license": "MIT",
	"bin": {
		"pni": "dist/cli.js"
	},
	"type": "module",
	"main": "dist/cli.js",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc && npm run copy-templates",
		"copy-templates": "node scripts/copy-templates.js",
		"dev": "tsc --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test": "prettier --check . && xo && ava",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"nuxt",
		"vue",
		"threejs",
		"three.js",
		"cli",
		"scaffold",
		"generator",
		"tailwind",
		"css-variables",
		"shadcn"
	],
	"dependencies": {
		"execa": "^8.0.1",
		"ink": "^4.1.0",
		"meow": "^11.0.0",
		"react": "^18.2.0",
		"react-devtools-core": "^4.28.5"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^1.2.3"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"overrides": {
		"braces": "3.0.3",
		"micromatch": "4.0.8",
		"semver": "7.5.2"
	},
	"prettier": "@vdemedes/prettier-config"
}
